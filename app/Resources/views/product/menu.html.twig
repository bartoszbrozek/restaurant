{{ dump(products) }}

<!-- menu -->
<section id="menu-list" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center marb-35">
                <h1 class="header-h">Menu List</h1>
                <a href="{{ path('homepage') }}" class="btn btn-info">Modify Menu</a>
                <p class="header-p">Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy
                    <br>nibh euismod tincidunt ut laoreet dolore magna aliquam. </p>
            </div>
            <div class="col-md-12  text-center gallery-trigger">
                <ul>
                    <li><a class="filter" data-filter="all">Show All</a></li>
                    <li><a class="filter" data-filter=".category-1">Breakfast</a></li>
                    <li><a class="filter" data-filter=".category-2">Lunch</a></li>
                    <li><a class="filter" data-filter=".category-3">Dinner</a></li>
                </ul>
            </div>
            <div id="Container">
                {% for product in products %}
                    <div class="mix category-2 menu-restaurant" data-myorder="2">
                        <span class="clearfix">
                        <a class="menu-title" href="#"
                           data-meal-img="assets/img/restaurant/rib.jpg">{{ product.name }}</a>
                            {% set left = product.name|length %}
                            {% set right = product.price|length %}
                            <span style="left: {{ left*10 + 10 }}px; right:{{ right*6 + 15 }}px;"
                                  class="menu-line"></span>
                        <span class="menu-price">{{ product.price }}</span>
                      </span>
                        <span class="menu-subtitle">{{ product.description }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<!--/ menu -->