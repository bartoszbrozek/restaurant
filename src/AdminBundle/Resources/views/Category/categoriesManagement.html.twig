{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <a data-toggle="modal" title="Add a new product"
           href="#addProductModal" class="btn btn-primary open-AddEntityModal">
            <i class="fa fa-plus"></i> Add a new category</a>
    </div>
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.categoryID }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a title="Edit this product"
                               href="{{ path('AdminBundle:editCategory', {'category_id':category.categoryId}) }}"
                               class="btn btn-primary">
                                <i class="fa fa-edit"></i> Edit</a>

                            <a data-toggle="modal" title="Remove this product"
                               href="#removeEntityModal" class="btn btn-danger open-RemoveEntityModal"
                               data-id="{{ category.categoryId }}">
                                <i class="fa fa-remove"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Modal Add-->
    <div id="addEntityModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">New category</h4>
                </div>
                <div class="modal-body">
                    <p>Add a new category to menu</p>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <!-- Modal Edit-->
    <div id="editProductModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit category</h4>
                </div>
                <div class="modal-body">
                    <p>Make changes and update this category</p>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <!-- Modal Remove-->
    <div id="removeEntityModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Warning</h4>
                </div>
                <div class="modal-body">
                    <p>Do you really want to remove this category?</p>
                    <form action="{{ path('AdminBundle:removeCategory') }}" metho="post">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger" id="entityId" name="entityId" value="">Yes
                            </button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

{% endblock %}